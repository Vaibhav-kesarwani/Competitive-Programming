    #include <bits/stdc++.h>
    #define ll long long int
    #define nline '\n'
    using namespace std;
     
    void solve()
    {
        ll n;
        cin >> n;
     
        ll avaRooms = 0;
     
        while (n--)
        {
            ll p, q;
            cin >> p >> q;
     
            if (q - p >= 2)
                avaRooms++;
        }
        cout << avaRooms << nline;
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        while (T--) 
        {
            solve();
        }
     
    }
