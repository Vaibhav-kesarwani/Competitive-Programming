#include <bits/stdc++.h>
#define ll long long int
#define nline '\n'
using namespace std;

void solve()
{
    ll n;
    cin >> n;

    cout << n / 2 + n % 2 << nline;

    ll i = 1, j = 3 * n;

    while (i < j)
    {
        cout << i << " " << j << nline;
        i += 3;
        j -= 3;
    }
    cout << nline;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll T = 1;
    cin >> T;
    while (T--) 
    {
        solve();
    }

}
