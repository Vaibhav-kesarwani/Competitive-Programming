    #include <bits/stdc++.h>
    #define ll long long int
    #define nline '\n'
    using namespace std;
     
    void solve()
    {
        ll a, b, c, d;
        cin >> a >> b >> c >> d;
     
        ll sum = a + b + c + d;
        if (sum == 0)
            cout << 0 << nline;
        else if (sum == 4)
            cout << 2 << nline;
        else 
            cout << 1 << nline;
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        cin >> T;
        while (T--) 
        {
            solve();
        }
    }
