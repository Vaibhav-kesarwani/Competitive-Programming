    #include <bits/stdc++.h>
    #define ll long long int
    #define nline '\n'
    using namespace std;
     
    int solve()
    {
        ll a, b , c;
        cin >> a >> b >> c;
     
        if ((a == 1 && b == 1) || (a == 1 && c == 1) || (b == 1 && c == 1))
            return 1;
        else
            return 0;
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        cin >> T;
        ll sum = 0;
        while (T--) 
        {
            sum += solve();
        }
        cout << sum << nline;
        
    }
