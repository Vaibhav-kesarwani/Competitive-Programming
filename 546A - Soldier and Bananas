    #include <bits/stdc++.h>
    #define ll long long int
    #define nline '\n'
    using namespace std;
     
    void solve()
    {
        ll k,n,w;
        cin >> k >> n >> w;
     
        int totalCost = ((w * (w + 1)) / 2) * k;
        int rem = totalCost - n;
        if (rem < 0)
            cout << 0 << nline;
        else
            cout << rem << nline;
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        while (T--) 
        {
            solve();
        }
     
    }
