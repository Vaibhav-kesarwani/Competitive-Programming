#include <bits/stdc++.h>
#define ll long long int
#define nline '\n'
using namespace std;

void solve()
{
    ll n;
    cin >> n;

    if (n % 4 == 0)
        cout << 1 << " " << 'A' << nline;
    else if (n % 4 == 1)
        cout << 0 << " " << 'A' << nline;
    else if (n % 4 == 2)
        cout << 1 << " " << 'B' << nline;
    else if (n % 4 == 3)
        cout << 2 << " " << 'A' << nline;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll T = 1;
    while (T--) 
    {
        solve();
    }
}
