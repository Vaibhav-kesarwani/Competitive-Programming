    #include <bits/stdc++.h>
    #define ll long long int
    #define nline '\n'
    using namespace std;
     
    void solve()
    {
        ll n;
        cin >> n;
        ll odd = 0, even = 0;
        for (int i = 0; i < n; i++)
        {
            ll t;
            cin >> t;
     
            if (t & 1)
                odd++;
            else
                even++;
        }
     
        cout << min(odd,even) << nline;
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        cin >> T;
        while (T--) 
        {
            solve();
        }     
    }
