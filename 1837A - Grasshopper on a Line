#include <bits/stdc++.h>
#define ll long long int
#define nline '\n'
using namespace std;

void solve()
{
    ll N, K;
    cin >> N >> K;

    if (N % K)   
        cout << 1 << nline << N << nline;
    else
        cout << 2 << nline << (N - 1) << " " << 1 << nline;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll T = 1;
    cin >> T;
    while (T--) 
    {
        solve();
    }

}
