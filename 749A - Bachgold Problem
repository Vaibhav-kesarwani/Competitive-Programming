#include <bits/stdc++.h>
#define ll long long int
#define nline '\n'
using namespace std;

void solve()
{
    ll n;
    cin >> n;

    if (n & 1)
    {
        cout << n / 2 << nline;
        for (int i = 0; i < (n / 2) - 1; i++)
            cout << 2 << " ";
        cout << 3 << nline;
    }
    else
    {
        cout << n / 2 << nline;
        for (int i = 0; i < (n / 2); i++)
            cout << 2 << " ";
        cout << nline;
    }
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll T = 1;
    while (T--) 
    {
        solve();
    }

}
