    #include <bits/stdc++.h>
    #define ll long long int
    #define nline '\n'
    using namespace std;
     
    void solve()
    {
        string text;
        getline(cin, text);
     
        if (text[0] != toupper(text[0]))
            text[0] = toupper(text[0]);
     
        cout << text << nline;
    }
     
    int main()
    {
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
        ll T = 1;
        while (T--) 
        {
            solve();
        }
    }
