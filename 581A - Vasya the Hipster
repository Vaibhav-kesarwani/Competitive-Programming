#include <bits/stdc++.h>
#define ll long long int
#define nline '\n'
using namespace std;

void solve()
{
    ll a, b;
    cin >> a >> b;

    if (a < b)
    {
        cout << a << " " << (b - a) / 2 << nline;
    }
    else if (b < a)
    {
        cout << b << " " << (a - b) / 2 << nline;
    }
    else
    {
        cout << a << " " << 0 << nline;
    }
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll T = 1;
    while (T--) 
    {
        solve();
    }

}
