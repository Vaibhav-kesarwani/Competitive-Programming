#include <bits/stdc++.h>
#define ll long long int
#define nline '\n'
using namespace std;

void solve()
{
    ll n;
    cin >> n;
    for (int i = 0; i < n; i++) 
    {
        if (i & 1)
            cout << "I love" << " ";
        else
            cout << "I hate" << " ";

        if (i != n - 1)
            cout << "that ";
        else
            cout << "it ";
    }


}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    ll T = 1;
    while (T--) 
    {
        solve();
    }

}
